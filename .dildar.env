# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Database
DATABASE_URL=mongodb://localhost:27017/hospital_management
DB_NAME=hospital_management

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=10d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_REFRESH_EXPIRES_IN=70d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# EasyPaisa Payment
EASYPAISA_API_URL=https://api.easypaisa.com
EASYPAISA_MERCHANT_ID=your-merchant-id
EASYPAISA_SECRET_KEY=your-secret-key

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token

# Email (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@hospitalmanagement.com

# Cache
CACHE_TTL=300
CACHE_MAX=100

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Hospital Settings
HOSPITAL_WIFI_SSID=HospitalWiFi
HOSPITAL_LATITUDE=31.4697
HOSPITAL_LONGITUDE=74.2728

# Refund Policy
REFUND_PERCENTAGE=90
WALLET_CREDIT_PERCENTAGE=10